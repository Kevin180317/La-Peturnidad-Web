---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="max-w-[1200px] mx-auto px-6 flex flex-col justify-center pb-10 mt-25 lg:mt-30"
>
  <div
    class="flex flex-col md:flex-row justify-start md:justify-between items-center lg:items-end mb-10 md:gap-4 gap-10"
  >
    <div class="md:max-w-1/2 flex flex-col gap-3 md:gap-4 lg:gap-6 text-texto">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-semibold">
        {t("about.h1")}
      </h1>
      <h2 class="md:text-lg lg:text-xl text-[#828282]">
        {t("about.h2")}
      </h2>
      <p class="text-sm md:text-base lg:text-lg">
        {t("about.p1")}
      </p>
      <p class="text-sm md:text-base lg:text-lg">
        {t("about.p2")}
      </p>
    </div>
    <div class="w-full md:w-1/2 flex-shrink-0">
      <figure class="w-full md:max-h-[420px]">
        <img
          src="/FotoGato.png"
          alt="FurryFndr Logo"
          class="w-full h-auto object-contain rounded-2xl"
        />
      </figure>
    </div>
  </div>
</section>
