---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section>
  <div
    class="max-w-[1200px] mx-auto px-6 flex flex-col justify-center pb-10 mt-10 lg:mt-24"
  >
    <h1 class="font-bold text-xl md:text-2xl lg:text-5xl text-texto lg:mb-6">
      {t("home.about.h1")}
    </h1>
    <div class="flex flex-col md:flex-row gap-7 mt-10">
      <div class="md:h-[500px] overflow-hidden md:w-3/5 relative">
        <figure class="rounded-2xl h-full">
          <img
            class="w-full h-full object-cover rounded-2xl"
            src="/FrontpageCat.png"
            alt="See Missing Pets"
          />
        </figure>
        <div
          class="absolute bottom-1/12 left-1/12 text-texto text-xl xl:text-3xl font-semibold max-w-md"
        >
          <p>{t("home.about.p1")}</p>
        </div>
      </div>

      <div class="md:h-[500px] overflow-hidden md:w-2/5">
        <figure class="rounded-2xl h-full hidden md:block">
          <img
            class="w-full h-full object-cover rounded-2xl"
            src="/FrontpageNotifications.png"
            alt="Neighbourhood"
          />
        </figure>

        <figure class="rounded-2xl h-full block md:hidden">
          <img
            class="w-full h-full object-cover rounded-2xl"
            src="/FrontpageNotificationsMobile.png"
            alt="Neighborhood"
          />
        </figure>
      </div>
    </div>
  </div>

  <div
    class="max-w-[1200px] mx-auto px-6 flex flex-col justify-center pb-8 mt-8 lg:mt-24"
  >
    <h1 class="font-bold text-xl md:text-2xl lg:text-5xl text-texto md:mb-6">
      {t("home.about.h2")}
    </h1>

    <div class="flex flex-col md:flex-row gap-7 mt-10">
      <div class="md:h-[450px] overflow-hidden md:w-1/2">
        <figure class="rounded-2xl h-full">
          <img
            class="w-full h-full object-cover rounded-2xl"
            src="/FrontpageApp.png"
            alt="See Missing Pets"
          />
        </figure>
      </div>

      <div
        class="md:h-[450px] h-[350px] w-full block bg-white overflow-hidden md:w-1/2 relative rounded-2xl p-6"
      >
        <div class="text-texto">
          <h1 class="text-xl xl:text-2xl font-semibold">
            {t("home.about.p2")}
          </h1>
          <p class="text-lg xl:text-xl max-w-md md:max-w-xl">
            {t("home.about.p3")}
          </p>
        </div>
        <figure
          class="mt-6 md:mt-0 absolute bottom-0 right-0 w-3/5 sm:w-1/2 md:w-4/6"
        >
          <img
            class="w-full h-auto rounded-2xl object-cover"
            src="/FrontpageCommunity.png"
            alt="Community"
          />
        </figure>
      </div>
    </div>
  </div>
</section>
