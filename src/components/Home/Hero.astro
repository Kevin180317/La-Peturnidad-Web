---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="w-screen lg:h-[700px] bg-[url('/FrontpageHero.png')] bg-cover bg-[position:70%_50%] lg:bg-center bg-no-repeat"
>
  <div
    class="h-[400px] lg:h-[700px] w-full flex items-center justify-center mt-20 px-6"
  >
    <div
      class="max-w-[1200px] mx-auto flex flex-col gap-4 w-full items-start lg:justify-center h-[400px] lg:h-[700px]"
    >
      <h1
        class="font-bold text-2xl md:text-4xl lg:text-6xl text-white max-w-xs md:max-w-md lg:max-w-2xl leading-relaxed"
      >
        {t("home.hero.h1")}
      </h1>
      <p
        class="font-normal text-xs md:text-lg lg:text-2xl text-white max-w-3xs md:max-w-sm lg:max-w-xl mb-8 leading-relaxed"
      >
        {t("home.hero.h2")}
      </p>
      <div class="lg:flex gap-6 text-texto">
        <a
          class="bg-white rounded-xl py-2 lg:py-4 border-0 shadow-xl font-bold lg:text-2xl px-2 flex items-center justify-start max-w-[135px] lg:max-w-56 mb-4 lg:mb-0"
          href="/"
          title="App Store Link"
          aria-label="Download on the App Store"
        >
          <svg
            class="text-gray-800"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            width="30"
            height="30"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M17.537 12.625a4.421 4.421 0 0 0 2.684 4.047 10.96 10.96 0 0 1-1.384 2.845c-.834 1.218-1.7 2.432-3.062 2.457-1.34.025-1.77-.794-3.3-.794-1.531 0-2.01.769-3.275.82-1.316.049-2.317-1.318-3.158-2.532-1.72-2.484-3.032-7.017-1.27-10.077A4.9 4.9 0 0 1 8.91 6.884c1.292-.025 2.51.869 3.3.869.789 0 2.27-1.075 3.828-.917a4.67 4.67 0 0 1 3.66 1.984 4.524 4.524 0 0 0-2.16 3.805m-2.52-7.432A4.4 4.4 0 0 0 16.06 2a4.482 4.482 0 0 0-2.945 1.516 4.185 4.185 0 0 0-1.061 3.093 3.708 3.708 0 0 0 2.967-1.416Z"
            ></path>
          </svg>
          <p class="ml-1 lg:ml-2 text-xs lg:text-lg">App Store</p></a
        >
        <a
          class="bg-white rounded-xl py-2 lg:py-4 border-0 shadow-xl font-bold lg:text-2xl px-2 flex items-center justify-start max-w-[135px] lg:max-w-56"
          href="/"
          title="Google Play Link"
          aria-label="Download on Google Play"
        >
          <svg
            viewBox="0 0 64 64"
            xmlns="http://www.w3.org/2000/svg"
            stroke-width="3"
            stroke="#000000"
            fill="none"
            width="30"
            height="30"
            ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
              id="SVGRepo_tracerCarrier"
              stroke-linecap="round"
              stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"
              ><path
                d="M12.36,53.33V10.67a1,1,0,0,1,1.56-.91L51.11,31a1,1,0,0,1,0,1.81L13.93,54.24A1.05,1.05,0,0,1,12.36,53.33Z"
              ></path><line x1="12.36" y1="10.67" x2="42.07" y2="38.02"
              ></line><line x1="12.36" y1="53.33" x2="41.24" y2="25.35"
              ></line></g
            ></svg
          >
          <p class="ml-1 lg:ml-2 text-xs lg:text-lg">Google Play</p></a
        >
      </div>
    </div>
  </div>
</section>
