---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="w-screen h-screen flex flex-col items-center bg-[url('/OnDevelopmentMobile.png')] md:bg-[url('/OnDevelopment.png')] bg-fixed bg-cover bg-center bg-no-repeat px-6"
>
  <h1
    class="font-bold text-4xl md:text-5xl lg:text-7xl pt-64 md:pt-80 text-white mb-6"
  >
    {t("placeholder.h1")}
  </h1>
  <p class="text-lg md:text-xl lg:text-2xl text-white text-center">
    {t("placeholder.p1")}
  </p>
</section>
