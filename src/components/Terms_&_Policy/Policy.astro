---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const terms = [
  {
    Title: t("policy.items.t1"),
    Description: t("policy.items.p1"),
  },
  {
    Title: t("policy.items.t2"),
    Description: t("policy.items.p2"),
  },
  {
    Title: t("policy.items.t3"),
    Description: t("policy.items.p3"),
  },
  {
    Title: t("policy.items.t4"),
    Description: t("policy.items.p4"),
  },
  {
    Title: t("policy.items.t5"),
    Description: t("policy.items.p5"),
  },
  {
    Title: t("policy.items.t6"),
    Description: t("policy.items.p6"),
  },
];
---

<section class="pt-20">
  <div
    class="bg-[url('/BlankBannerMobile.png')] md:bg-[url('/BlankBanner.png')] bg-cover bg-center bg-no-repeat h-[250px] md:h-[300px] w-full flex items-center justify-center"
  >
    <div class="flex items-center justify-center max-w-[750px] w-full px-4">
      <h1 class="font-bold text-3xl md:text-5xl text-white text-center">
        {t("policy.title")}
      </h1>
    </div>
  </div>
  <div>
    <div
      class="max-w-[1200px] mx-auto px-6 flex flex-col justify-center pb-10 mt-10 lg:mt-24 space-y-6"
    >
      {
        terms.map((term) => (
          <div>
            <h2 class="text-2xl font-semibold mb-2 text-principal">
              {term.Title}
            </h2>
            <p class="text-texto leading-relaxed">{term.Description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
